# OpenAI Configuration (for text synthesis after vision analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_ENDPOINT=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Z.AI Vision Configuration (for PDF page-by-page image analysis)
# Get your key from https://z.ai/model-api (Z.AI) or https://bigmodel.cn (ZhipuAI)
Z_AI_API_KEY=your_zai_api_key_here

# Z.AI Base URL
# For Z.AI platform: https://api.z.ai/api/paas/v4/
# For ZhipuAI (China): https://open.bigmodel.cn/api/paas/v4/
Z_AI_BASE_URL=https://open.bigmodel.cn/api/paas/v4/

# Z.AI Vision Model
Z_AI_VISION_MODEL=glm-4.5v

# Database and Storage
DATABASE_PATH=./data/flashcards.db
UPLOAD_DIR=./static/uploads

# Server Configuration
PORT=8080
